@model online_Admission.Models.studentviewmodel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" /> 

    <meta name="viewport" content="width=device-width" />
    <title>edit</title>
</head>
<body>
    @using (Html.BeginForm("edit", "student", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h4>student_registration</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.r_id)

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.r_cnic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.r_cnic, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password</label>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.r_password, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.r_password, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Full Name</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.r_fullname, new { @class = "form-control", @placeholder = "Full Name" })
                    @Html.ValidationMessageFor(model => model.r_fullname, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Father's Name:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.r_fathername, new { @class = "form-control", @placeholder = "Father's Name" })
                    @Html.ValidationMessageFor(model => model.r_fathername, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Mobile:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.r_mobile, new { @class = "form-control", @placeholder = "Mobile Number" })
                    @Html.ValidationMessageFor(model => model.r_mobile, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Home Phone Number:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.r_phone, new { @class = "form-control", @placeholder = "Home Phone Number" })
                    @Html.ValidationMessageFor(model => model.r_phone, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">HSC Result:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.r_hsc_gpa, new { @class = "form-control", @placeholder = "HSC Result" })
                    @Html.ValidationMessageFor(model => model.r_hsc_gpa, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">SSC Result:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.r_ssc_gpa, new { @class = "form-control", @placeholder = "SSC Result" })
                    @Html.ValidationMessageFor(model => model.r_ssc_gpa, "", new { @class = "text danger" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Priority #1:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.r_p1, ViewBag.departmentList as SelectList, "--select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.r_p1, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Priority #2:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.r_p2, ViewBag.departmentList as SelectList, "--select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.r_p2, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Priority #3:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.r_p3, ViewBag.departmentList as SelectList, "--select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.r_p3, "", new { @class = "text danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Category:</label>

                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.r_cat, ViewBag.categoryList as SelectList, "--select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.r_cat, "", new { @class = "text danger" })
                </div>
            </div>

            <div class="form-group">

                <label class="control-label col-sm-2" for="email">Upload Documents</label><br /><br />
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Upload Image:</label>
                <div class="col-sm-10">
                    <input type="file" name="imgfile" id="imgfile" class="from-control" />

                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">HSC Marksheet:</label>
                <div class="col-sm-10">
                    <input type="file" name="HSCfile" id="HSCfile" class="from-control" required="required" />

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">SSC Marksheet:</label>
                <div class="col-sm-10">
                    <input type="file" name="SSCfile" id="SSCfile" class="from-control" required="required" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-danger" />
                    <div class="btn btn-success">@Html.ActionLink("Cancel", "profile", "student")</div>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
